#include<stdio.h>
#include<math.h>

main(){

    //Atividade 10

    int distribuidor=28, imposto=45, somaimp=0;
    float taxa=0.0, novoCusto=0.0, custoInicial=0.0;

    printf("Informe o valor inicial do carro:")
    scanf("%f", &custoInicial);

    somaimp = distribuidor + imposto;
    taxa = ((somaimp * 0.01) + 1.00);
    novoCusto = taxa * custoInicial;

    printf("Valor final: %.2f", novoCusto);

}
